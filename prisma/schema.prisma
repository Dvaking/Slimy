model SocialMediaWatcher {
    uuid          String      @id @default(uuid())
    services_name ServiceName
    username      String
    message       String?
    channel_id    String
    last_video    String?
    created_at    DateTime    @default(now())

    // Relation vers Server
    server_id String
    server    Server @relation(fields: [server_id], references: [id])
}
